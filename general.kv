<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (.06, .52, .52, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.3

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.4
            pos_hint: {"center_x": 0.5}
            spacing: 10
            canvas.before:
                Color:
                    rgba: (.06, .52, .52, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                text: 'Botón 1'
                size_hint_y: None
                height: 40
                background_color: (.5, .5, .5, 1)
                background_normal: ''
                on_release: root.open_button_screen()

            Button:
                text: 'Botón 2'
                size_hint_y: None
                height: 40
                background_color: (.5, .5, .5, 1)
                background_normal: ''

            Button:
                text: 'Botón 3'
                size_hint_y: None
                height: 40
                background_color: (.5, .5, .5, 1)
                background_normal: ''

            Button:
                text: 'Botón 4'
                size_hint_y: None
                height: 40
                background_color: (.5, .5, .5, 1)
                background_normal: ''
                on_release: root.open_admin_window()
            Button:
                text: 'Botón 5'
                size_hint_y: None
                height: 40
                background_color: (.5, .5, .5, 1)
                background_normal: ''

        BoxLayout:
            size_hint_y: 0.3

