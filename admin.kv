<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: scrn_contents
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: content_nav
        orientation: 'horizontal'  # Asegura la orientación horizontal
        size_hint: 1, 1
        
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06, .52, .52, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: user_toggle
                text: 'Manage Users'
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            ToggleButton:
                id: view_toggle
                text: 'Ver usuario'
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            Label:
                id: sp
                text: ''
                size_hint_y: .7

        BoxLayout:
            id: all_content
            size_hint_x: .8  # Asegura el ancho proporcional al contenido izquierdo
            padding: (20,10)
            
            ScreenManager:
                id: scrn_mngr
                
                Screen:
                    id: scrn_content
                    name: 'scrn_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_contents
                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint_y: None
                            height: 45


                Screen:
                    id: scrn_product_content
                    name: 'scrn_product_content'
                    
                Screen:
                    id: scrn_analysis
                    name: 'scrn_analysis'
                    
                Screen:
                    id: scrn_view
                    name: 'scrn_view'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 1
                        # Contenido de visualización
