<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<CapacitadorAspiranteWindow>:
    id: scrn_contents
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        
        # Top Navigation Bar
        BoxLayout:
            id: top_nav
            size_hint_y: None
            height: 30
            size_hint: 1, None
            canvas.before:
                Color:
                    rgba: (.06, .45, .45, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            FlatButton:
                id: file_trigger
                text: 'File'
                on_release: file_dropdown.open(self)
                size_hint: (.1, None)
                height: 30

            Label:
                text: 'Capacitador Dashboard'
                bold: True
                size_hint: (.8, None)  # Reduce el tamaño para dejar espacio al botón de "Regresar"
                height: 30

            Button:
                text: 'Regresar'
                size_hint: (.1, None)
                height: 30
                on_release: root.go_back(self)  # Llama al método para regresar a la pantalla

        # Main Content Area
        BoxLayout:
            id: content_nav
            size_hint: 1, 1
            orientation: 'horizontal'

            ScreenManager:
                id: scrn_mngr
                size_hint: 1, 1

                Screen:
                    id: scrn_content
                    name: 'scrn_content'

                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        size_hint: 1, 1

                        BoxLayout:
                            id: scrn_contents
                            size_hint: 1, 1
                            orientation: 'vertical'

                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint: 1, None
                            height: 35

