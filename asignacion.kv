<AdminWindowAsignaciones>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    # Contenedor para el botón de "Regresar"
    BoxLayout:
        size_hint_y: None
        height: 50  # Aumentamos la altura para que el botón se vea claramente
        padding: [10, 20, 10, 20]  # Padding en formato [left, top, right, bottom]
        spacing: 10

        Button:
            text: "Regresar"
            size_hint_x: None
            width: 100
            height: 40
            on_release: app.root.current = 'vista_direccion_territorial'

    # Navegación superior
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint: (1, None)
            height: 30

    # Contenido principal
    BoxLayout:
        id: content_nav

        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06, .52, .52, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: user_toggle
                text: 'Manage Users'
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            
            ToggleButton:
                id: view_toggle
                text: 'Ver usuario'
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            Label:
                id: sp
                text: ''
                size_hint_y: .7

        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20, 10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_content
                    name: 'scrn_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_contents

                Screen:
                    id: scrn_product_content
                    name: 'scrn_product_content'
                Screen:
                    id: scrn_analysis
                    name: 'scrn_analysis'
                Screen:
                    id: scrn_view
                    name: 'scrn_view'
                    BoxLayout:
                        id: scrn_view
                        orientation: 'vertical'
                        size_hint: 1, 1
