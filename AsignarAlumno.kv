<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AsignarAlumnosWindow>:
    id: scrn_contents
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'

        # Top Navigation Bar
        BoxLayout:
            id: top_nav
            size_hint_y: None
            height: 30
            size_hint: 1, None
            canvas.before:
                Color:
                    rgba: (.06, .45, .45, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            FlatButton:
                id: file_trigger
                text: 'File'
                on_release: file_dropdown.open(self)
                size_hint: (.1, None)
                height: 30

            Label:
                text: 'Admin Dashboard'
                bold: True
                size_hint: (.8, None)
                height: 30

            Button:
                text: 'Regresar'
                size_hint: (.1, None)
                height: 30
                on_release: root.go_back_to_convocatorias()

        # Main Content Area
        BoxLayout:
            id: content_nav
            size_hint: 1, 1
            orientation: 'horizontal'

            ScreenManager:
                id: scrn_mngr
                size_hint: 1, 1

                # Pantalla principal
                Screen:
                    id: scrn_content
                    name: 'scrn_content'

                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        size_hint: 1, 1

                        BoxLayout:
                            id: scrn_contents
                            size_hint: 1, 1
                            orientation: 'vertical'

                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint: 1, None
                            height: 35

                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint: 1, None
                            height: 45

                # Nueva pantalla: Formulario de usuario
                # Nueva pantalla: Vista de usuario
                Screen:
                    id: scrn_view
                    name: 'scrn_view'

                    BoxLayout:
                        id: scrn_view_content
                        orientation: 'vertical'
                        padding: 10
                        spacing: 10
                        size_hint: 1, 1
                        
                        BoxLayout:
                            size_hint_y: None
                            height: 50
                            orientation: 'horizontal'

                            Button:
                                text: 'Regresar'
                                size_hint_x: None
                                width: 100
                                on_release: root.go_back_to_users()  # Asegúrate de que esta función esté definida en tu clase raíz.BoxLayout:
                           