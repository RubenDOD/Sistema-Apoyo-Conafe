<ConvocatoriasScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 50
            size_hint: 0.6, 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: 'Pantalla Convocatorias'
                font_size: 24
                color: [0, 0, 0, 1]
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: self.texture_size[1]

            Button:
                text: 'Regresar'
                font_size: 20
                size_hint_y: None
