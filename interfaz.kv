ScreenManager:
    LoginScreen:
    MainScreen:

<LoginScreen>:
    name: "login"
    AnchorLayout: 
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.8, 1  # Azul
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: 300, 250 

            Label:
                text: "Iniciar Sesión"
                font_size: '24sp'
                color: 1, 1, 1, 1
                size_hint_y: None
                height: 40

            TextInput:
                id: input_usuario
                hint_text: "Usuario"
                multiline: False
                size_hint_y: None
                height: 30

            TextInput:
                id: input_contrasena
                hint_text: "Contraseña"
                password: True
                multiline: False
                size_hint_y: None
                height: 30

            Button:
                text: "Acceder"
                size_hint: (None, None)
                size: 150, 40
                pos_hint: {"center_x": 0.5}
                on_press: root.validar_credenciales()

<MainScreen>:
    name: "main"
    AnchorLayout:  
        canvas.before:
            Color:
                rgba: 0.1, 0.5, 0.8, 1  # Azul
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: 400, 300 

            Label:
                text: "Soporte de Convocatorias"
                font_size: '24sp'
                color: 1, 1, 1, 1
                size_hint_y: None
                height: 40
                pos_hint: {"center_x": 0.5}  

            Spinner:
                id: spinner_convocatorias
                text: 'Selecciona convocatoria'
                size_hint: (1, None)
                height: '44dp'

            Button:
                text: 'Publicar Convocatoria'
                size_hint: (1, None)
                height: '50dp'
                pos_hint: {"center_x": 0.5}
                on_press: app.publicar_convocatoria(self)

    Button:
        text: 'Seleccionar Archivo PDF'
        size_hint_x: 0.4  # Tamaño ligeramente más pequeño en ancho
        size_hint_y: 0.2  # Tamaño ligeramente más pequeño en ancho
        pos_hint: {'center_x': 0.5}
        background_normal: ''
        background_color: 0.5, 0.5, 0.5, 0.85  # Fondo gris ligeramente transparente
        border: [15, 15, 15, 15]
        color: 1, 1, 1, 1  # Texto blanco
        font_size: '16sp'
        on_press: app.seleccionar_archivo_pdf()

    Label:
        text: ''
        size_hint_y: None
        height: '20dp'
